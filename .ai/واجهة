// ğŸ¨ ØªØ®ØµÙŠØµ Ø§Ù„Ø£Ù„ÙˆØ§Ù† Ù„Ù„Ù…Ø³ØªØ®Ø¯Ù…
const ThemeCustomizer = () => {
  const [primaryColor, setPrimaryColor] = useState('#E6D5AC');
  
  const updateTheme = (color) => {
    document.documentElement.style.setProperty('--primary-color', color);
    setPrimaryColor(color);
  };
  
  return (
    <div className="theme-customizer">
      <h3>ØªØ®ØµÙŠØµ Ø§Ù„Ù…Ø¸Ù‡Ø±</h3>
      <div className="color-options">
        {['#E6D5AC', '#FF6B6B', '#4ECDC4', '#45B7D1'].map(color => (
          <button
            key={color}
            className={`color-btn ${primaryColor === color ? 'active' : ''}`}
            style={{ backgroundColor: color }}
            onClick={() => updateTheme(color)}
          />
        ))}
      </div>
    </div>
  );
};
