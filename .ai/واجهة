const AnimatedText = ({ text, delay = 0 }) => {
  return (
    <div className="animated-text">
      {text.split('').map((char, i) => (
        <span
          key={i}
          style={{
            animationDelay: `${delay + i * 0.1}s`
          }}
          className="char-animate"
        >
          {char}
        </span>
      ))}
    </div>
  );
};
