{
    "color": {
        "primary": "#0B61FF",
        "primary-hover": "#074AD1",
        "secondary": "#6B7280",
        "success": "#10B981",
        "warning": "#F59E0B",
        "error": "#EF4444",
        "neutral-50": "#F9FAFB",
        "neutral-100": "#F3F4F6",
        "neutral-200": "#E5E7EB",
        "neutral-700": "#374151",
        "neutral-900": "#111827"
    },
    "spacing": {
        "xs": "4px",
        "sm": "8px",
        "md": "16px",
        "lg": "24px",
        "xl": "40px",
        "2xl": "64px"
    },
    "typography": {
        "font-family": "Inter, system-ui, sans-serif",
        "scale": {
            "h1": {
                "size": "36px",
                "weight": 700,
                "line-height": 1.2
            },
            "h2": {
                "size": "30px",
                "weight": 600,
                "line-height": 1.3
            },
            "h3": {
                "size": "24px",
                "weight": 600,
                "line-height": 1.4
            },
            "body": {
                "size": "16px",
                "weight": 400,
                "line-height": 1.6
            },
            "small": {
                "size": "14px",
                "weight": 400,
                "line-height": 1.5
            }
        }
    },
    "motion": {
        "duration-instant": "0ms",
        "duration-fast": "120ms",
        "duration-medium": "240ms",
        "duration-slow": "400ms",
        "easing-standard": "cubic-bezier(0.2, 0.8, 0.2, 1)",
        "easing-enter": "cubic-bezier(0, 0, 0.2, 1)",
        "easing-exit": "cubic-bezier(0.4, 0, 1, 1)"
    },
    "radius": {
        "none": "0",
        "sm": "4px",
        "md": "8px",
        "lg": "16px",
        "full": "9999px"
    },
    "shadow": {
        "sm": "0 1px 2px rgba(0,0,0,0.05)",
        "md": "0 4px 6px rgba(0,0,0,0.1)",
        "lg": "0 10px 15px rgba(0,0,0,0.1)"
    }
}